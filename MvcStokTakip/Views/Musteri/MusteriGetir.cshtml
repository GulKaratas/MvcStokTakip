@model MvcStokTakip.Models.Entity.TBLMUSTERILER

@{
    ViewBag.Title = "MusteriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<br />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h3 class="mb-0">Kategori Güncelle</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Guncelle", "Musteri", FormMethod.Post))
                    {
                        @Html.HiddenFor(m => m.MUSTERIID)
                        <div class="mb-3">
                            @Html.LabelFor(m => m.MUSTERIID, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.MUSTERIID, new { @class = "form-control form-control-lg", @readonly = "readonly" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.MUSTERIAD, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.MUSTERIAD, new { @class = "form-control form-control-lg", @required = "required" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.MUSTERISOYAD, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.MUSTERISOYAD, new { @class = "form-control form-control-lg", @readonly = "readonly" })
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/Kategori/Index" class="btn btn-secondary me-md-2">Geri Dön</a>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-check-circle"></i> Kategori Güncelle
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
