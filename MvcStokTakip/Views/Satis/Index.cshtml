@model MvcStokTakip.Models.Entity.TBLSATISLAR
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<br />

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Satış İşlemleri</h2>
    <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#Modal1">
        <i class="bi bi-cart-plus"></i> Satış Yap
    </button>
</div>


<div class="modal fade" id="Modal1" tabindex="-1" aria-labelledby="Modal1Label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg">
            <div class="modal-header bg-dark text-white">
                <h3 class="modal-title" id="Modal1Label">
                    <i class="bi bi-cart-check"></i> Satış Yapma Ekranı
                </h3>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" action="/Satis/YeniSatis">
                <div class="modal-body" style="padding: 30px;">
                    <div class="mb-3">
                        <label for="Urun" class="form-label fw-bold">
                            Ürün Adı
                        </label>
                        @Html.TextBoxFor(m => m.URUN, new { @class = "form-control form-control-lg", @placeholder = "Ürün adını giriniz", @required = "required", id = "Urun", name = "Urun" })
                    </div>
                    <div class="mb-3">
                        <label for="Marka" class="form-label fw-bold">
                            Müşteri Adı-Soyadı:
                        </label>
                        @Html.TextBoxFor(m => m.MUSTERI, new { @class = "form-control form-control-lg", @placeholder = "Müşteri adını giriniz", @required = "required", id = "Urun", name = "Urun" })

                    </div>
                    <div class="mb-3">
                        <label for="Musteri" class="form-label fw-bold">
                            Adet:
                        </label>
                        @Html.TextBoxFor(m => m.ADET, new { @class = "form-control form-control-lg", @placeholder = "Adeti giriniz", @required = "required", id = "Urun", name = "Urun" })

                    </div>
                    <div class="mb-4">
                        <label for="Telefon" class="form-label fw-bold">
                            Fiyat:
                        </label>
                        @Html.TextBoxFor(m => m.FIYAT, new { @class = "form-control form-control-lg", @placeholder = "Fiyat giriniz", @required = "required", id = "Urun", name = "Urun" })
                    </div>
                </div>
                <div class="modal-footer" style="padding: 20px 30px; border-top: 1px solid #dee2e6;">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> İptal
                    </button>
                    <button type="submit" class="btn btn-dark">
                        <i class="bi bi-check-circle"></i> Satışı Tamamla
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
