@model MvcStokTakip.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "UrunGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<br />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h3 class="mb-0">Ürün Güncelle</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Guncelle", "Urunler", FormMethod.Post))
                    {
                        @Html.HiddenFor(m => m.URUNID)
                        <div class="mb-3">
                            @Html.LabelFor(m => m.URUNID, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.URUNID, new { @class = "form-control form-control-lg", @readonly = "readonly"})
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.URUNAD, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.URUNAD, new { @class = "form-control form-control-lg", @required = "required" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.URUNKATEGORİ, new { @class = "form-label fw-bold" })
                            @Html.DropDownListFor(m => m.TBLKATEGORILER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control form-control-lg", @required = "required" })
                            @*@Html.TextBoxFor(m => m.URUNKATEGORİ, new { @class = "form-control form-control-lg", @readonly = "readonly" })*@
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.STOK, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.STOK, new { @class = "form-control form-control-lg", @required = "required" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.MARKA, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.MARKA, new { @class = "form-control form-control-lg", @required = "required" })
                        </div>
                        <div>
                            <div class="mb-3">
                                @Html.LabelFor(m => m.FIYAT, new { @class = "form-label fw-bold" })
                                @Html.TextBoxFor(m => m.FIYAT,"{0:0.##}",new { @class = "form-control form-control-lg" })

                            </div>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/Urunler/Index" class="btn btn-secondary me-md-2">Geri Dön</a>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-check-circle"></i> Ürün Güncelle
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


